{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "app",
    "paths": {
      "@*": ["./*"],
      // "@components/*": ["components/*"],
      // "@lib": ["lib/index.ts"],
      "@/lib/*": ["lib/*"],
      "@/utils/*": ["utils/*"],
      "@/mutations": ["server/mutations/index.ts"],
      "@/mutations/*": ["server/mutations/*"],
      "@/queries": ["server/queries/index.ts"],
      "@/queries/*": ["server/queries/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
